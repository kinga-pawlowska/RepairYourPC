<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kingapawlowska.com.repairyourpc.RegisterOrderActivity"
    android:background="@drawable/image4">

    <TextView
        android:text="@string/tvRegOrdRegistrationOfRepair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvRegOrdRegistrationOfRepair"
        android:textColor="@android:color/holo_orange_light"
        android:layout_below="@+id/btnRegOrdBack"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textSize="30sp" />

    <Button
        android:text="@string/btnRegOrdBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegOrdBack"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvRegOrdRegistrationOfRepair"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:text="@string/required_fields_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRegOrdRequiredFields"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:text="@string/manufacturer_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRegOrdManufacturer"
                android:textColor="@android:color/white" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etRegOrdManufacturer"
                android:background="@color/editTextAlphaWhite" />

            <TextView
                android:text="@string/kind_of_computer_hardware_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRegOrdKindOfHardware"
                android:textColor="@android:color/white" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:id="@+id/spinRegOrdKindOfHardware"
                android:background="@color/editTextAlphaWhite"
                android:spinnerMode="dialog"
                android:entries="@array/Array_spinRegOrdKindOfHardware" />

            <TextView
                android:text="@string/type_model_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRegOrdModel"
                android:textColor="@android:color/white" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etRegOrdModel"
                android:background="@color/editTextAlphaWhite" />

            <TextView
                android:text="@string/service_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvOrdRegService"
                android:textColor="@android:color/white" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinRegOrdService"
                android:background="@color/editTextAlphaWhite"
                android:spinnerMode="dialog"
                android:entries="@array/Array_spinRegOrdService"/>

            <TextView
                android:text="@string/operating_system_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRegOrdOperatingSystem"
                android:textColor="@android:color/white" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinRegOrdOS"
                android:background="@color/editTextAlphaWhite"
                android:spinnerMode="dialog"
                android:entries="@array/Array_spinRegOrdOS"/>

            <TextView
                android:text="@string/description_of_the_problem_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRegOrdDescription"
                android:textColor="@android:color/white" />

            <EditText
                android:inputType="textMultiLine"
                android:lines="2"
                android:gravity="top|left"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical"
                android:background="@color/editTextAlphaWhite"
                android:id="@+id/etRegOrdDescription"
                android:maxLength="1000" />

            <TextView
                android:text="@string/link_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRegOrdLink"
                android:textColor="@android:color/white" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etRegOrdLink"
                android:background="@color/editTextAlphaWhite"/>

            <Button
                android:text="@string/btnRegOrdRegisterOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnRegOrdRegisterOrder" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
